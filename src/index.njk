    </head>

    <body class="wrapper">
        {% include "partials/header.njk" %}

        <div class="with-sidebar | region">
            {% include "partials/controls.njk" %}

            <main class="stack" data-stack-space="biggy">
                {% for subpage in collections.subpage | sortByOrder %}
                    <article class="flow">
                        {{ subpage.content | safe }}
                    </article>
                {% endfor %}
            </main>
        </div>

        {% include "partials/footer.njk" %}
    </body>
