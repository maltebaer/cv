<footer
    class="cluster"
    style="
        --cluster-gap: var(--space-xs) var(--space-s);
        --cluster-horizontal-alignment: space-between
    ">
    <p>
        heavily inspired by
        <a
            class="will-move"
            href="https://buildexcellentwebsit.es"
            target="_blank"
            rel="noopener noreferrer"
            >buildexcellentwebsit.es
        </a>
    </p>

    <dl class="cluster" style="--cluster-gap: var(--space-xs)">
        <dt>build with</dt>
        {% for tool in tools %}
            <dd>
                <a
                    class="will-move"
                    href="{{ tool.href }}"
                    target="_blank"
                    rel="noopener noreferrer">
                    {{ tool.title }}
                </a>
            </dd>
        {% endfor %}
    </dl>
</footer>
